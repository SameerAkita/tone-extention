{
    "manifest_version": 3,
    "name": "Tone",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "http://localhost:3001/*"
    ],
    "externally_connectable": {
        "matches": [
            "http://localhost:3001/*"
        ]
    }
}
